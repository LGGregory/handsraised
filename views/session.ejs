  </head>

  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-light bg-light static-top">
      <div class="container">
        <a class="navbar-brand" href="#">Hands Raised</a>
		<form action="/end_session" method="POST">
		<input type="hidden" name="session_key" value="<%= data.session_key %>">
        <button type="submit" class="btn btn-info" href="#">End Session</button>
		</form>
      </div>
    </nav>

    <!-- Masthead -->
    <header class="masthead text-white text-center">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-xl-9 mx-auto">
            <h2 class="mb-5"><%= data.session_name %></h2>
          </div>
		  <div class="col-xl-5 mx-auto">
            <h4 class="mb-5">Session Code: <u><%= data.session_key %></u></h4>
          </div>
          <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
            
          </div>
        </div>
      </div>
	  
    </header>
	<section class="bg-light">
	<div class="mainbutton">
		<form action="/end_session" method="POST">
              <div >
                <input type="hidden" name="session_key" value="<%= data.session_key %>">
                <div >
                  <button type="submit" class="btn btn-block btn-lg btn-info">End Session</button>
                </div>
              </div>
            </form>
			</div>
			</section>
    <section class="bg-light">
	<div class="container">
	<div>
		<div name="students">
			<table id="students" name="student_table" cellspacing="30">
			<tr>
				
			<th>
				Position
			</th>
			<th>
				Student Name
			</th>
			<th>
				Answer
			</th>
			</tr>
		<% for(var i = 0; i<data.raised.length; i++) {%>
			<form action="/answer_student" method="POST">
			<tr>
				<td name="student_number">
					<%= i+1%>
				</td>
				<td name="student_name">
					<%= data.raised[i].student_name %>
				</td>
				<td>
					<input type="hidden" name="student_name" value="<%= data.raised[i].student_name %>">
					<input type="hidden" name="session_key" value="<%= data.session_key %>">
					<button type="submit" >Answer</button>
				</td>
			</tr>
			</form>
			<% } %>
			</table>
		</div>
	</div>
	</div>
	</section>
	<section>
	
	</section>


    <!-- Footer -->
    <footer class="footer ">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 text-center text-lg-left my-auto">
